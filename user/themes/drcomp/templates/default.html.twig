{% extends 'partials/base.html.twig' %}

{% block content %}
    <section class="page-header">
        <div class="container">
            <h1>{{ page.title }}</h1>
            {% if page.header.subtitle %}
                <p>{{ page.header.subtitle }}</p>
            {% endif %}
        </div>
    </section>

    <section class="page-content">
        <div class="container">
            {{ page.content|raw }}
        </div>
    </section>

    {% include 'partials/cta-banner.html.twig' %}
{% endblock %}
